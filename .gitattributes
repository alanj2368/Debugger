# Auto detect text files and perform LF normalization
* text eol=lf
*.php text eol=lf 
*.inc text eol=lf
*.phtml text eol=lf
*.js text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.text text eol=lf
.htaccess text eol=lf
*.sh text eol=lf
*.sql  text eol=lf

# Custom for Visual Studio
*.cs     diff=csharp

# Standard to msysgit
*.doc	 diff=astextplain
*.DOC	 diff=astextplain
*.docx diff=astextplain
*.DOCX diff=astextplain
*.dot  diff=astextplain
*.DOT  diff=astextplain
*.pdf  diff=astextplain
*.PDF	 diff=astextplain
*.rtf	 diff=astextplain
*.RTF	 diff=astextplain
